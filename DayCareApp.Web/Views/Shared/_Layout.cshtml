<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                   
                </button>
                @Html.ActionLink("Daycare App", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>
                                @Html.ActionLink("Administrer", "Index", "Admin", routeValues: null, htmlAttributes: new { title = "Manage" })
                            </li>
                        }
                        else if (User.IsInRole("InstitutionAdmin"))
                        {
                            <li>
                                @Html.ActionLink("Administrer", "Index", "InstitutionAdmin", routeValues: null, htmlAttributes: new { title = "Manage" })
                            </li>
                        }
                        else if (User.IsInRole("Employee"))
                        {
                            <li>@Html.ActionLink("Check In", "Index", "CheckIn")</li>
                            <li>@Html.ActionLink("Registrer Barn", "Create", "Child")</li>
                            <li>@Html.ActionLink("Registrer Forældre", "Register", "Parent")</li>
                        }
                        else if (User.IsInRole("Parent"))
                        {
                            <li>@Html.ActionLink("Administrer", "Index", "Parent")</li>
                        }

                    }
                    else
                    {

                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        </div>
    <div class="container">
        <footer>
            <p>&copy; @DateTime.Now.Year - KEA Project - Peter Dalgaard Jensen, Phi Kelly Molel, Teis Andersson </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
